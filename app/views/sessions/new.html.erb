<h2>Sign In</h2>

<% form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign In" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign Up!", signup_path %></p>

